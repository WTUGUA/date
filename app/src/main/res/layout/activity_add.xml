<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deepblack"
    android:orientation="vertical"
    tools:context=".AddActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/black"
        android:navigationIcon="@drawable/navbar_icon_back"
        android:id="@+id/add_toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="添加事件"
            android:textColor="@color/white"></TextView>

        <ImageView
            android:id="@+id/add_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/navbar_icon_check"></ImageView>
    </Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:text="事件"
            android:textColor="@color/white"
            android:textSize="16sp"></TextView>

        <EditText
            android:id="@+id/add_event"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:gravity="right|center"
            android:hint="未命名"
            android:layout_marginRight="14dp"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/my_cursor"></EditText>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/black"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="日期"
            android:textColor="@color/white"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/add_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:textColor="@color/bule"
            android:textSize="16sp"
            ></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/black"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:gravity="center|left"
            android:text="分类"
            android:textColor="@color/white"
            android:textSize="16sp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_class"
            android:clickable="true"
            android:drawableRight="@drawable/icon_chevronright"
            android:drawablePadding="2dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="无"
            android:textColor="@color/bule"
            android:textSize="16sp"
            ></TextView>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/black"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="置顶"
                android:textColor="@color/white"
                android:textSize="16sp"></TextView>
            <CheckBox
                android:id="@+id/btn_select"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:button="@null"
                android:checked="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/button_selector"></CheckBox>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/black"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:gravity="center|left"
            android:text="重复"
            android:textColor="@color/white"
            android:textSize="16sp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_repeat"
            android:clickable="true"
            android:drawableRight="@drawable/icon_chevronright"
            android:drawablePadding="2dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="永不"
            android:textColor="@color/bule"
            android:textSize="16sp"
            ></TextView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>
    <com.youth.banner.Banner
        android:id="@+id/add_banner"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
</LinearLayout>