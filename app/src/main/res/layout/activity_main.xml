<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deepblack"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.planapps.countdown.uitl.maintoolbar
            android:id="@+id/maintoolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/black"
            app:leftButtonIcon="@drawable/navbar_icon_setting"
            app:rightButtonIcon="@drawable/navbar_icon_add">
        </com.planapps.countdown.uitl.maintoolbar>
        <FrameLayout
            android:id="@+id/backgroundmap"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="@drawable/firstback">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="23dp"
                        android:text="4"
                        android:textSize="90sp"
                        android:textColor="@color/white"></TextView>

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="天前"
                        android:layout_marginLeft="18dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"></TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:text="国庆节"></TextView>

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:text="2019-10-01(周二)"></TextView>
            </LinearLayout>
        </FrameLayout>

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/deepblack"
            android:dividerHeight="10dp">
        </ListView>

    </LinearLayout>
</RelativeLayout>