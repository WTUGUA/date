<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="请选择分类"
        android:textColor="@color/deepblack"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:gravity="center|left"></TextView>
    <View
        android:layout_width="match_parent"
        android:background="@drawable/toolbarline"
        android:layout_below="@id/dialog_text"
        android:layout_height="0.1dp"/>
    <ListView
        android:id="@+id/add_class_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:divider="@drawable/toolbarline"
        android:dividerHeight="0.1dp"></ListView>
    <View
        android:layout_width="match_parent"
        android:background="@drawable/toolbarline"
        android:layout_below="@id/add_class_listview"
        android:layout_height="0.1dp"/>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="取消"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/deepblack"/>
</LinearLayout>