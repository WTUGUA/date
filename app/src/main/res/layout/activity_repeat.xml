<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deepblack"
    android:orientation="vertical"
    tools:context=".RepeatActivity">
    <Toolbar
        android:id="@+id/repeat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:navigationIcon="@drawable/navbar_icon_back"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重复"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="center"></TextView>
    </Toolbar>
    <View
        android:layout_width="match_parent"
        android:background="@drawable/toolbarline"
        android:layout_below="@id/repeat_toolbar"
        android:layout_height="2dp"/>
    <ListView
        android:id="@+id/repeat_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:divider="@color/gray"
        android:dividerHeight="0.5dp"
        ></ListView>

</LinearLayout>